extends layout/main

include components/navbar
include components/header
include components/footer
include shards/blankSection
include shards/textSection
include shards/textSectionCenterialized

block content
  +navbar('연잇', 'app')

  +blankSection('45')
  +textSection(
    '새 게임 시작하기',
    '연달아 이을준비가 되셨나요? 시작해보세요!'
  )

  article
    div.container
      table
        thead
          th 게임
          th 플레이어
          th 참가
        tbody
          each game in games
            tr
              td= game.name
              td= game.join
              td
                a(href='/app/' + game.id) 참가
          else
            tr
              td 현재 참가할 수 있는 게임이 없습니다
              td &ndash;
              td &ndash;

  +footer()
